<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/nameLabelView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/view_outer_margins"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/primary_text_size"
        tools:text="Test" />


    <TextView
        android:id="@+id/statusView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:layout_gravity="center_vertical|end"
        android:layout_marginStart="@dimen/view_outer_margins"
        android:layout_marginEnd="@dimen/view_outer_margins"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/list_item_status_text_size"
        tools:text="Testu je lose. Nije mu dobro." />


</LinearLayout>